block payment-content-constants

section.payment-layout(class=paymentContentClass)
    picture.payment-layout__picture(class={"payment-layout__picture_theme_confirmation": isConfirmation})
        source(srcset="./images/firstscreen.avif?v2" media="(min-width: 576px)")
        source(srcset="./images/firstscreen.webp?v2" media="(min-width: 576px)")
        source(srcset="./images/firstscreen-mobile.avif?v2" media="(max-width: 575px)")
        source(srcset="./images/firstscreen-mobile.webp?v2" media="(max-width: 575px)")
        img.payment-layout__image(src="./images/firstscreen.png?v2" alt="")

    .payment-layout__content
        block payment-content

    if isConfirmation
        .payment-layout__info
            block payment-content-info
